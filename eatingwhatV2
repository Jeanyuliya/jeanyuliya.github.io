<body>
    <header>
        <h1>今天吃什麼?</h1>
        <div class="counter">使用次數：<span id="usage-count">0</span></div>
    </header>
    
    <div class="main-content">
        <div class="spinner-container">
            <div class="switch-container">
                <div class="switch-btn active" id="food-btn">食物</div>
                <div class="switch-btn" id="drink-btn">飲料</div>
                <div class="switch-btn" id="both-btn">合併組合</div>
            </div>
            
            <div class="plate-cup-container">
                <div class="plate" id="plate">
                    <div class="utensils">
                        <div class="fork">
                            <div class="fork-prong"></div>
                            <div class="fork-prong"></div>
                            <div class="fork-prong"></div>
                        </div>
                        <div class="knife"></div>
                    </div>
                    <div class="spinner-text" id="food-spinner"></div>
                </div>
                <div class="cup" id="cup">
                    <div class="liquid"></div>
                    <div class="spinner-text" id="drink-spinner"></div>
                </div>
            </div>
            
            <div class="result-display" id="result-display">請輸入選項並點擊開始</div>
            
            <div class="button-container">
                <button id="start-btn">開始</button>
                <button id="reset-btn" class="reset-btn">重置</button>
            </div>
        </div>
        
        <div class="input-container">
            <div class="input-section">
                <h3>食物選項</h3>
                <div id="restaurant-section">
                    <h4>店名</h4>
                    <textarea placeholder="請輸入店家選項 (每行一個，最多5個)" class="batch-input" id="restaurant-batch" rows="5"></textarea>
                </div>
                
                <div id="dish-section">
                    <h4>餐點</h4>
                    <textarea placeholder="請輸入餐點選項 (每行一個，最多5個)" class="batch-input" id="dish-batch" rows="5"></textarea>
                </div>
            </div>
            
            <div class="input-section">
                <h3>飲料選項</h3>
                <div id="drink-store-section">
                    <h4>店名</h4>
                    <textarea placeholder="請輸入店家選項 (每行一個，最多5個)" class="batch-input" id="drink-store-batch" rows="5"></textarea>
                </div>
                
                <div id="drink-section">
                    <h4>飲料</h4>
                    <textarea placeholder="請輸入飲料選項 (每行一個，最多5個)" class="batch-input" id="drink-batch" rows="5"></textarea>
                </div>
            </div>
        </div>
    </div>

    <script>
        // 初始化計數器（不使用localStorage）
        let usageCount = 0;
        document.getElementById('usage-count').textContent = usageCount;
        
        // 預設值設定
        const defaultFoodOption = "空腹不吃";
        const defaultDrinkOption = "白開水";
        
        // 目前選擇的類型（食物或飲料或兩者）
        let currentType = 'food';
        
        // 切換食物/飲料按鈕
        document.getElementById('food-btn').addEventListener('click', function() {
            currentType = 'food';
            this.classList.add('active');
            document.getElementById('drink-btn').classList.remove('active');
            document.getElementById('both-btn').classList.remove('active');
        });
        
        document.getElementById('drink-btn').addEventListener('click', function() {
            currentType = 'drink';
            this.classList.add('active');
            document.getElementById('food-btn').classList.remove('active');
            document.getElementById('both-btn').classList.remove('active');
        });
        
        document.getElementById('both-btn').addEventListener('click', function() {
            currentType = 'both';
            this.classList.add('active');
            document.getElementById('food-btn').classList.remove('active');
            document.getElementById('drink-btn').classList.remove('active');
        });
        
        // 新增輸入欄位函數
        function addInputField(type, maxCount = 5) {
            const container = document.getElementById(`${type}-inputs`);
            const inputs = container.querySelectorAll(`.${type}-input`);
            
            if (inputs.length < maxCount) {
                const inputField = document.createElement('div');
                inputField.className = 'input-field';
                inputField.innerHTML = `<input type="text" placeholder="請輸入${type === 'restaurant' ? '店名' : type === 'dish' ? '餐點選項' : '飲料選項'}" class="${type}-input">`;
                container.appendChild(inputField);
            } else {
                alert(`最多只能添加 ${maxCount} 個選項！`);
            }
        }
        
        // 註冊新增按鈕事件
        document.getElementById('add-restaurant').addEventListener('click', () => addInputField('restaurant'));
        document.getElementById('add-dish').addEventListener('click', () => addInputField('dish'));
        document.getElementById('add-drink-store').addEventListener('click', () => addInputField('drink-store'));
        document.getElementById('add-drink').addEventListener('click', () => addInputField('drink'));
        
        // 開始按鈕
        document.getElementById('start-btn').addEventListener('click', function() {
            const resultDisplay = document.getElementById('result-display');
            resultDisplay.textContent = '選擇中...';
            
            // 增加使用次數
            usageCount++;
            document.getElementById('usage-count').textContent = usageCount;
            
            // 獲取輸入的選項
            const restaurantInputs = document.getElementById('restaurant-batch').value
                .split('\n')
                .map(line => line.trim())
                .filter(line => line !== '')
                .slice(0, 5);
            
            const dishInputs = document.getElementById('dish-batch').value
                .split('\n')
                .map(line => line.trim())
                .filter(line => line !== '')
                .slice(0, 5);
            
            const drinkStoreInputs = document.getElementById('drink-store-batch').value
                .split('\n')
                .map(line => line.trim())
                .filter(line => line !== '')
                .slice(0, 5);
                
            const drinkInputs = document.getElementById('drink-batch').value
                .split('\n')
                .map(line => line.trim())
                .filter(line => line !== '')
                .slice(0, 5);
            
            // 合併食物選項，並添加預設選項
            const foodOptions = [...restaurantInputs, ...dishInputs];
            if (foodOptions.length === 0) {
                foodOptions.push(defaultFoodOption);
            }
            
            // 合併飲料選項，並添加預設選項
            const drinkOptions = [...drinkStoreInputs, ...drinkInputs];
            if (drinkOptions.length === 0) {
                drinkOptions.push(defaultDrinkOption);
            }
            
            // 禁用開始按鈕
            this.disabled = true;
            
            // 根據當前類型選擇容器和選項
            const spinner = currentType === 'food' ? 
                document.getElementById('food-spinner') : 
                document.getElementById('drink-spinner');
                
            const options = currentType === 'food' ? foodOptions : drinkOptions;
            
            // 開始輪盤動畫
            function startSpinner(type, options, elementId, resultElementId, callback = null) {
                const spinner = document.getElementById(elementId);
                const resultDisplay = document.getElementById(resultElementId);
                
                let count = 0;
                const animationDuration = 3000; // 總動畫時間（毫秒）
                const startTime = Date.now();
                const maxCount = 30; // 最大迭代次數
                
                function animate() {
                    const currentTime = Date.now();
                    const elapsed = currentTime - startTime;
                    
                    // 根據已經過時間調整動畫速度
                    const speed = Math.max(50, 100 - (elapsed / animationDuration) * 100);
                    
                    count++;
                    const randomIndex = Math.floor(Math.random() * options.length);
                    spinner.textContent = options[randomIndex];
                    spinner.className = 'spinner-text fading';
                    
                    setTimeout(() => {
                        spinner.className = 'spinner-text';
                        
                        if (elapsed < animationDuration && count < maxCount) {
                            setTimeout(animate, speed);
                        } else {
                            // 動畫結束，顯示最終結果
                            const finalIndex = Math.floor(Math.random() * options.length);
                            const result = options[finalIndex];
                            spinner.textContent = result;
                            spinner.className = 'spinner-text final';
                            
                            // 更新結果顯示
                            if (resultElementId) {
                                resultDisplay.textContent = `${type}: ${result}`;
                            }
                            
                            if (callback) callback(result);
                        }
                    }, 150);
                }
                
                animate();
            }
            
            // 禁用開始按鈕
            this.disabled = true;
            
            // 根據當前類型選擇容器和選項
            if (currentType === 'food') {
                // 顯示對應容器
                document.getElementById('plate').style.display = 'flex';
                document.getElementById('cup').style.display = 'none';
                
                // 開始食物輪盤
                startSpinner('食物', foodOptions, 'food-spinner', 'result-display', () => {
                    // 啟用開始按鈕
                    document.getElementById('start-btn').disabled = false;
                });
            } 
            else if (currentType === 'drink') {
                // 顯示對應容器
                document.getElementById('plate').style.display = 'none';
                document.getElementById('cup').style.display = 'flex';
                
                // 開始飲料輪盤
                startSpinner('飲料', drinkOptions, 'drink-spinner', 'result-display', () => {
                    // 啟用開始按鈕
                    document.getElementById('start-btn').disabled = false;
                });
            }
            else if (currentType === 'both') {
                // 同時顯示兩個容器
                document.getElementById('plate').style.display = 'flex';
                document.getElementById('cup').style.display = 'flex';
                
                // 清空結果顯示區
                document.getElementById('result-display').textContent = '';
                
                // 食物結果暫存
                let foodResult = null;
                
                // 開始食物輪盤，然後開始飲料輪盤
                startSpinner('食物', foodOptions, 'food-spinner', null, (result) => {
                    foodResult = result;
                    document.getElementById('result-display').textContent = `食物: ${result}`;
                    
                    // 飲料輪盤稍延遲再開始
                    setTimeout(() => {
                        startSpinner('飲料', drinkOptions, 'drink-spinner', null, (drinkResult) => {
                            document.getElementById('result-display').textContent = `食物: ${foodResult} | 飲料: ${drinkResult}`;
                            // 啟用開始按鈕
                            document.getElementById('start-btn').disabled = false;
                        });
                    }, 500);
                });
        });
        
        // 重置按鈕
        document.getElementById('reset-btn').addEventListener('click', function() {
            // 清空所有輸入
            document.getElementById('restaurant-batch').value = '';
            document.getElementById('dish-batch').value = '';
            document.getElementById('drink-store-batch').value = '';
            document.getElementById('drink-batch').value = '';
            
            // 重置結果顯示
            document.getElementById('result-display').textContent = '請輸入選項並點擊開始';
            document.getElementById('food-spinner').textContent = '';
            document.getElementById('drink-spinner').textContent = '';
        });
    </script>
</body>
</html>
